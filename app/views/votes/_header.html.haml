            %a{:href => "#", :onclick=>"jQuery.facebox({ ajax: '/votes/lukr_map_2' })"} #{t :lukr_projects_on_map}
        %li
          %a{:href => "#", :onclick=>"jQuery.facebox({ ajax: '/votes/help_info?previous_action=#{action_name}' })"} #{t :votes_header_help_label}
        %li
          %a{:href => "#", :onclick=>"jQuery.facebox({ ajax: '/votes/rules_info' })"} #{t :votes_header_rules_label}
        %li
          %a{:href => "#", :onclick=>"jQuery.facebox({ ajax: '/votes/logout_info' })"} #{t :votes_header_logout_label}
