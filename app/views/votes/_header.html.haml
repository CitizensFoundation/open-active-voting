        = link_to image_tag("gb.png"), params.merge(:locale=>"en")
      %ul.links
        - if action_name=="select_area"
          %li
            %a{:href => "#", :onclick=>"jQuery.facebox({ ajax: '/votes/lukr_map' })"} #{t :votes_header_finnahverfi_label}
